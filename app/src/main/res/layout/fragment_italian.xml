<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItalianFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Italian Restaurants"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:background="#FFFFFF"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="458dp">


        <ImageButton
            android:id="@+id/italian1"
            android:layout_width="124dp"
            android:layout_height="107dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/italian"
            app:layout_constraintBottom_toTopOf="@+id/italian2"
            app:layout_constraintEnd_toEndOf="@+id/italian2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/italian2" />

        <ImageButton
            android:id="@+id/italian2"
            android:layout_width="124dp"
            android:layout_height="107dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/italiani"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.676" />

        <ImageButton
            android:id="@+id/italian3"
            android:layout_width="124dp"
            android:layout_height="107dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/italianii"
            app:layout_constraintEnd_toEndOf="@+id/italian2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/italian2"
            app:layout_constraintTop_toBottomOf="@+id/italian2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>